    <Grid Background="Black" Opacity="0.95">
        <Grid x:Name="MainCanvas" HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Visibility="Visible" Opacity=".90">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition MaxHeight="66" MinHeight="66"/>
            </Grid.RowDefinitions>
            <!--Main content area -->
            <Grid x:Name="RootContent" Canvas.ZIndex="100"
                  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <Control:HamburgerMenu x:Name="HamburgerMenu" Background="Black" Foreground="White"
                                       OpenPaneLength="240" DisplayMode="CompactInline"
                                       ItemTemplate="{StaticResource MenuItemTemplate}"
                                       OptionsItemTemplate="{StaticResource MenuItemTemplate}"                                      
                                       ItemsSource="{Binding MenuItemCollection}"
                                       OptionsItemsSource="{Binding OptionalItemCollection}">
                    <Control:HamburgerMenu.ContentTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition/>
                        </TransitionCollection>
                    </Control:HamburgerMenu.ContentTransitions>
                    <Frame Background="Black" x:Name="HostedFrame" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <Frame.ContentTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition />
                            </TransitionCollection>
                        </Frame.ContentTransitions>
                    </Frame>
                    <Control:HamburgerMenu.PaneBackground>
                        <SolidColorBrush Color="#FF0F0F0F" Opacity="0.94"/>
                    </Control:HamburgerMenu.PaneBackground>
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="ItemClick">
                            <Core:InvokeCommandAction Command="{Binding MenuItemCommand}"/>
                        </Core:EventTriggerBehavior>
                        <Core:EventTriggerBehavior EventName="OptionsItemClick">
                            <Core:InvokeCommandAction Command="{Binding MenuItemCommand}"
                                                  CommandParameter="{Binding SelectedItem, ElementName=HamburgerMenu}"/>
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Control:HamburgerMenu>
            </Grid>

