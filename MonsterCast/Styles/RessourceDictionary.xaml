    <DataTemplate x:Key="GridViewItemTemplate">
        <Grid Padding="10,0,10,0" Margin="0" MinWidth="232" MinHeight="312">
            <StackPanel Orientation="Vertical" Margin="0,0,0,45">
                <Grid MaxHeight="212" MinHeight="212" MaxWidth="212"
                   VerticalAlignment="Top" Margin="0,0,0,18">
                    <Image  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="UniformToFill" Source="{Binding Address}"/>
                </Grid>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <TextBlock Text="{Binding Title}" MaxWidth="212"
                                   TextTrimming="CharacterEllipsis" 
                                   Foreground="White" FontSize="15" FontFamily="ms-appx:/Fonts/Montserrat-Regular.ttf#Montserrat"
                                   Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Subtitle}" Foreground="Gray" MaxWidth="212"
                                   TextTrimming="CharacterEllipsis"
                                   FontFamily="ms-appx:/Fonts/Montserrat-Regular.ttf#Montserrat"/>
                    </StackPanel>
                    
                </StackPanel>
            </StackPanel>
        </Grid>
    </DataTemplate>
